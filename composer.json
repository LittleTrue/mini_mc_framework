{
    "name": "gxz/mini_mc_framework",
    "type": "library",
    "description": "基于TP-ORM组件框架, 小型的数据处理操作业务以组件的形式提供",
    "keywords": [
        "mc",
        "framework",
        "mini_framework"
    ],
    "license": "Apache-2.0",
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "topthink/think-orm": "^1.0",
        "guzzlehttp/guzzle": "^6.2 || ^7.0",
        "adbario/php-dot-notation": "^2.0",
        "symfony/cache": "^3.3 || ^4.3 || ^5.0",
        "pimple/pimple": "v2.1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Demo\\common\\": "src/common/",
            "Demo\\master\\": "src/master/",
            "Demo\\model\\": "src/model/",
            "Demo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Demo\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "secure-http": false
    },
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix",
        "check-style": "php-cs-fixer fix --using-cache=no --diff --config=.php_cs --dry-run --ansi",
        "fix-style": "php-cs-fixer fix --using-cache=no --config=.php_cs --ansi",
        "test": "vendor/bin/phpunit --colors=always"
    }
}